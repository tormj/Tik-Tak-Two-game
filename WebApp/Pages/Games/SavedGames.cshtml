@page "/Games/SavedGames"
@model WebApp.Pages.Games.SavedGamesModel
@{
    ViewData["Title"] = "Saved Games";
}

<div class="text-center">
    <h1 class="display-4">Saved Games</h1>
    @if (!Model.SavedGames.Any())
    {
        <p>No saved games available.</p>
    }
    else
    {
        <ul class="list-group">
            @foreach (var saveGame in Model.SavedGames)
            {
                <li class="list-group-item">
                    Game ID: @saveGame.Id)
                    <form method="post" asp-route-id="@saveGame.Id" class="d-inline">
                        <button type="submit" class="btn btn-primary btn-sm">Load Game</button>
                    </form>
                </li>
            }
        </ul>
    }
</div>