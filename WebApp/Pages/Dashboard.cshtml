@page
@model WebApp.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Dashboard</h1>
    <p>Your username: @Model.Username</p>

    <a asp-page="/Games/NewGame" class="btn btn-primary">Start New Game</a>
    <a asp-page="/Games/SavedGames" class="btn btn-secondary">Load Saved Games</a>
</div>